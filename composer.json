{
    "name": "tatter/sefer",
    "type": "project",
    "description": "The Sefer Project",
    "homepage": "https://sefer.red",
    "license": "GNU General Public License",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/codeigniter4/codeigniter4"
        },
        {
            "type": "vcs",
            "url": "https://github.com/lonnieezell/myth-auth"
        },
        {
			"type": "package",
			"package": {
				"name": "vuejs/vue",
				"version": "2.6.10",
				"dist": {
					"url": "https://github.com/vuejs/vue/archive/v2.6.10.zip",
					"type": "zip"
				},
				"source": {
					"url": "https://github.com/vuejs/vue",
					"type": "svn",
					"reference": "releases"
				}
			}
        }
    ],
   "require": {
        "php": ">=7.2",
        "codeigniter4/codeigniter4": "dev-develop",
        "myth/auth": "dev-develop",
        "vuejs/vue": "^2.6",
        "tatter/addins": "^1.3",
        "tatter/files": "^1.1",
        "components/jquery": "^3.3",
        "twbs/bootstrap": "^4.3",
        "fortawesome/font-awesome": "^5.8",
        "enyo/dropzone": "^5.5",
        "thiagoalessio/tesseract_ocr": "^2.7"
    },
	"require-dev": {
		"mikey179/vfsstream": "1.6.*",
		"phpunit/phpunit": "^7.0",
		"mockery/mockery": "^1.0"
	},
	"autoload-dev": {
		"psr-4": {
			"ProjectTests\\Support\\": "tests/_support"
		}
	},
    "scripts": {
		"test": "phpunit",
        "post-update-cmd": [
            "composer dump-autoload",
            "./post-update.sh"
        ]
    }
}
